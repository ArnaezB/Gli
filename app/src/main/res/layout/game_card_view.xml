<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_game_card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:contentDescription="@string/game_card_image"
        android:src="@mipmap/game_img_ph">
    </ImageView>

    <TextView
        android:id="@+id/name_game_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/image_game_card"
        app:layout_constraintTop_toTopOf="@id/image_game_card"
        android:layout_marginStart="5dp"
        android:text="@string/game_card_name_placeholder">
    </TextView>

    <TextView
        android:id="@+id/score_game_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/score_value_game_card"
        app:layout_constraintBottom_toBottomOf="@+id/image_game_card"
        android:layout_marginStart="5dp"
        android:text="@string/score_text">
    </TextView>

    <TextView
        android:id="@+id/score_value_game_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/score_game_card"
        android:text="@string/score_value_placeholder"
        android:layout_marginEnd="10dp">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>